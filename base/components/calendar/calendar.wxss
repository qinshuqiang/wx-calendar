.calendar {
  color: #333333;
}
.calendar-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 94rpx;
  font-size: 30rpx;
}
.calendar-top-cancel {
  margin-left: 34rpx;
  color: #999999;
}
.calendar-top-box {
  display: flex;
  justify-content: center;
  align-items: center;
}
.calendar-top-box-leftArrow {
  width: 18rpx;
  height: 18rpx;
  border-left: #999999 solid 2rpx;
  border-bottom: #999999 solid 2rpx;
  transform: rotate(45deg);
  margin-right: 40rpx;
}
.calendar-top-box-rightArrow {
  width: 18rpx;
  height: 18rpx;
  border-right: #999999 solid 2rpx;
  border-bottom: #999999 solid 2rpx;
  transform: rotate(-45deg);
  margin-left: 40rpx;
}
.calendar-top-confirm {
  margin-right: 34rpx;
  color: #FF4E43;
}
.calendar-week {
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.calendar-week-i {
  flex: 1;
  text-align: center;
}
.calendar-days {
  min-height: 360rpx;
  display: flex;
  flex-wrap: wrap;
}
.calendar-days-i {
  width: calc(100% / 7);
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
